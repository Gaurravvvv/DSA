#include<iostream>
#include<algorithm>
using namespace std ;

struct node{
    int data ;
    node* left ;
    node* right ;

    node(int val){
        data = val ;
        left = right = nullptr ;
    }
};

int maxheight(node* root){
    if(root == nullptr){
        return 0 ;
    }

    int lh = maxheight(root->left);
    int rh = maxheight(root->right);

    return 1 + max(lh , rh);
}

int main(){
    node* root = new node(1);
    root->left = new node(2);
    root->right = new node(3);
    root->right->left = new node(4);
    root->right->right = new node(5);

    cout << "Max Height of BT : " << maxheight(root) ;

    

    return 0 ;
}
