public:
    int maxProfit(vector<int>& prices) {

        int mini = prices[0] ; // Initialize day 1 as mini price 
        int profit = 0 ; // Max profit as 0
        int n = prices.size() ;
        for(int i = 1 ; i < n ; i++){
            int cost = prices[i]-mini ; // Calculation of profit on each index(day)
            profit = max(profit , cost) ; // select max profit from previous existing one or new one 
            mini = min(prices[i] , mini ) ; // select minimum buy day from previous existing one or new one
        }

        
        return profit ;
        

       
        
    }
};
